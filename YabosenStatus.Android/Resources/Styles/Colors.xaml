<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- Primary Colors -->
    <Color x:Key="Primary">#a855f7</Color>
    <Color x:Key="PrimaryDark">#7c3aed</Color>
    <Color x:Key="PrimaryDarkText">#ffffff</Color>
    <Color x:Key="Secondary">#ddd1f6</Color>
    <Color x:Key="SecondaryDarkText">#9b59b6</Color>
    <Color x:Key="Tertiary">#2b0b98</Color>
    
    <!-- Neutral Colors -->
    <Color x:Key="White">#ffffff</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#f3f4f6</Color>
    <Color x:Key="Gray200">#e5e7eb</Color>
    <Color x:Key="Gray300">#d1d5db</Color>
    <Color x:Key="Gray400">#9ca3af</Color>
    <Color x:Key="Gray500">#6b7280</Color>
    <Color x:Key="Gray600">#4b5563</Color>
    <Color x:Key="Gray900">#1a1a1a</Color>
    <Color x:Key="Gray950">#0f0f0f</Color>
    
    <!-- Status Colors -->
    <Color x:Key="StatusOnline">#22c55e</Color>
    <Color x:Key="StatusOffline">#6b7280</Color>
    <Color x:Key="StatusDnd">#ef4444</Color>
    <Color x:Key="StatusIdle">#eab308</Color>
    <Color x:Key="StatusSleeping">#a855f7</Color>
    <Color x:Key="StatusStreaming">#ef4444</Color>
    
</ResourceDictionary>
