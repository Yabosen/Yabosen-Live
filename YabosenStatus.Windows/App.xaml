<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YabosenStatus.Windows.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Colors for Status -->
            <Color x:Key="StatusOnline">#22c55e</Color>
            <Color x:Key="StatusOffline">#6b7280</Color>
            <Color x:Key="StatusDnd">#ef4444</Color>
            <Color x:Key="StatusIdle">#eab308</Color>
            <Color x:Key="StatusSleeping">#a855f7</Color>
            <Color x:Key="StatusStreaming">#ef4444</Color>
            
            <!-- App Theme Colors -->
            <Color x:Key="AppBackground">#0f0f0f</Color>
            <Color x:Key="CardBackground">#1a1a1a</Color>
            <Color x:Key="AccentPurple">#a855f7</Color>
            <Color x:Key="TextPrimary">#ffffff</Color>
            <Color x:Key="TextSecondary">#9ca3af</Color>
            
            <!-- Button Styles -->
            <Style x:Key="StatusButtonStyle" TargetType="Button">
                <Setter Property="HeightRequest" Value="80" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="4" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
